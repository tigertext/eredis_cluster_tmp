%% -*- erlang -*-
{erl_opts, [ warn_unused_vars
           , warn_export_all
           , warn_shadow_vars
           , warn_unused_import
           , warn_unused_function
           , warn_bif_clash
           , warn_unused_record
           , warn_deprecated_function
           , warn_obsolete_guard
           , strict_validation
           , warn_export_vars
           , warn_exported_vars
           %% , warn_missing_spec
           , warn_untyped_record
           , debug_info
           , {parse_transform, lager_transform}
           ]}.

{dialyzer, [{plt_extra_apps, [poolboy]}]}.

{xref_checks, [ undefined_function_calls
              , locals_not_used
              , deprecated_function_calls
              , deprecated_functions
              ]}.

{ct_opts, [{verbose}]}.

{eunit_opts, [verbose]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{edoc_opts, [ {doclet, edown_doclet}
            , {dialyzer_specs, all}
            , {report_missing_type, true}
            , {report_type_mismatch, true}
            , {pretty_print, erl_pp}
            , {preprocess, true}
            ]}.

{deps, [{eredis, "1.7.0"},
        {poolboy, {git, "git@github.com:tigertext/poolboy.git", {branch, "vanessa/TY-2539"}}},
        lager,
        {lager_logstash, {git, "git@github.com:tigertext/lager_logstash.git", {tag, "0.1.4"}}}
       ]}.

{profiles, [{test, [{deps,
                     [{fakeredis_cluster,
                       {git, "https://github.com/Nordix/fakeredis_cluster.git",
                        {ref, "3037e7b"}}}]
                    }]
            },
            {docs, [{deps,
                     [{edown,
                       {git, "https://github.com/uwiger/edown.git",
                        {branch, "master"}}}
                     ]}]
            }]}.
